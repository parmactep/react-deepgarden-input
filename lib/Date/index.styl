@require 'deepgarden'
@require '../input.styl'

._DateInput
	position: relative

	._TextInput
		display: block

	select
		resetInput()
		width: 100%
		height: 100%

	&__DropDown
		max-width: 325px
		position: absolute
		z-index: 1000
		background: #FFF
		border: 1px solid $palette.border
		border-radius: 5px
		box-shadow: 0 1px 2px rgba(0,0,0,0.2)

	.react-calendar
		padding: 20px

		&__navigation
			margin-bottom: 10px

			&__arrow
				background: transparent
				border: none
				font-size: 1.6em

			&__label
				background: transparent
				border: none
				font-size: 1.2em
				text-transform: uppercase

		&__month-view

			&__weekdays

				&__weekday
					font-weight: bold
					text-align: center

					abbr
						display: inline-block
						padding: 10px
						border-bottom: none

		&__tile
			background: transparent
			border: none
			width: auto

			abbr
				display: inline-block
				padding: 5px
				line-height: 1em
				width: 1em
				height: 1em
				border-radius: 50%

			&--active

				abbr
					background: $palette.accent.background
					color: #FFF
